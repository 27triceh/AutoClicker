<Window x:Class="AutoClicker.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:commands="clr-namespace:AutoClicker.Commands"
        xmlns:enums="clr-namespace:AutoClicker.Enums"
        Topmost="true"
        ResizeMode="CanMinimize"
        Height="150" Width="300"
        Icon="{StaticResource SettingsIcon}">
    <Window.Resources>
        <ResourceDictionary Source="../Resources/SettingsWindowResources.xaml"/>
    </Window.Resources>

    <Window.CommandBindings>
        <CommandBinding Command="commands:SettingsWindowCommands.Save"
                        Executed="SaveCommand_Execute" CanExecute="SaveCommand_CanExecute"/>
    </Window.CommandBindings>

    <Grid Name="settingsGrid"
          HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Margin="5, 5, 5, 5"
               Content="Start Hotkey: "/>
        <ComboBox Name="comboBox1"
                  Grid.Row="0" Grid.Column="1" Margin="5, 5, 5, 5"
                  ItemsSource="{Binding Source={StaticResource keysValues}}"
                  SelectedIndex="0" SelectedItem="{Binding SelectedStartKey}"
                  HorizontalAlignment="Stretch"
                  VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button Name="saveStartHotkeyButton"
                Content="Save" Grid.Row="0" Grid.Column="2" Margin="5, 5, 5, 5"
                Command="commands:SettingsWindowCommands.Save"
                CommandParameter="{x:Static enums:Operation.Start}"/>

        <Label Grid.Row="1" Grid.Column="0"  Margin="5, 5, 5, 5"
               Content="Stop Hotkey: "/>
        <ComboBox Name="comboBox2"
                  Grid.Row="1" Grid.Column="1" Margin="5, 5, 5, 5"
                  ItemsSource="{Binding Source={StaticResource keysValues}}"
                  SelectedIndex="0" SelectedItem="{Binding SelectedStopKey}"
                  HorizontalAlignment="Stretch"
                  VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button Name="saveStopHotkeyButton"
                Content="Save" Grid.Row="1" Grid.Column="2" Margin="5, 5, 5, 5"
                Command="commands:SettingsWindowCommands.Save"
                CommandParameter="{x:Static enums:Operation.Stop}"/>
    </Grid>
</Window>
